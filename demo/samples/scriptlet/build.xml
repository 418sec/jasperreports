<project name="JasperReports" default="javac" basedir=".">

	<!--
		Compiles the java source files 
		of the test application.
	-->
	<target name="javac">
		<javac srcdir="./" destdir="./" debug="true" optimize="false" deprecation="false">
			<classpath>
				<pathelement location="./"/>
				<pathelement location="../../../classes"/>
				<fileset dir="../../../lib">
					<include name="**/*.jar"/>
				</fileset>
			</classpath>
		</javac>
	</target>

	<!--
		Compiles the XML report design 
		and produces the .jasper file.
	-->
	<target name="compile">
		<java classname="ScriptletApp" fork="true">
			<arg value="-Tcompile"/>
			<arg value="-FScriptletReport.xml"/>
			<classpath>
				<pathelement location="./"/>
				<pathelement location="../../../classes"/>
				<fileset dir="../../../lib">
					<include name="**/*.jar"/>
				</fileset>
			</classpath>
		</java>
	</target>

	<!--
		Compiles the XML report design using the BeanShell compiler
		and produces the .jasper file.
	-->
	<target name="compileBsh">
		<java classname="ScriptletApp" fork="true">
			<sysproperty key="jasper.reports.compiler.class" value="dori.jasper.engine.design.JRBshCompiler"/>
			<arg value="-Tcompile"/>
			<arg value="-FScriptletReport.xml"/>
			<classpath>
				<pathelement location="./"/>
				<pathelement location="../../../classes"/>
				<fileset dir="../../../lib">
					<include name="**/*.jar"/>
				</fileset>
			</classpath>
		</java>
	</target>

	<!--
		Fills the compiled report design with data 
		and produces the .jrprint file.
	-->
	<target name="fill">
		<java classname="ScriptletApp" fork="true">
			<arg value="-Tfill"/>
			<arg value="-FScriptletReport.jasper"/>
			<classpath>
				<pathelement location="./"/>
				<pathelement location="../../../classes"/>
				<fileset dir="../../../lib">
					<include name="**/*.jar"/>
				</fileset>
			</classpath>
		</java>
	</target>

	<!--
		Launches the report viewer to preview the report 
		stored in the .jrprint file.
	-->
	<target name="view">
		<java classname="dori.jasper.view.JasperViewer" fork="true">
			<arg value="-FScriptletReport.jrprint"/>
			<classpath>
				<pathelement location="./"/>
				<pathelement location="../../../classes"/>
				<fileset dir="../../../lib">
					<include name="**/*.jar"/>
				</fileset>
			</classpath>
		</java>
	</target>

	<!--
		Launches the report viewer to preview the generated report 
		stored in an XML file.
	-->
	<target name="viewXML">
		<java classname="dori.jasper.view.JasperViewer" fork="true">
			<arg value="-XML"/>
			<arg value="-FScriptletReport.jrpxml"/>
			<classpath>
				<pathelement location="./"/>
				<pathelement location="../../../classes"/>
				<fileset dir="../../../lib">
					<include name="**/*.jar"/>
				</fileset>
			</classpath>
		</java>
	</target>

	<!--
		Sends the report in the .jrprint file to the printer.
	-->
	<target name="print">
		<java classname="ScriptletApp" fork="true">
			<arg value="-Tprint"/>
			<arg value="-FScriptletReport.jrprint"/>
			<classpath>
				<pathelement location="./"/>
				<pathelement location="../../../classes"/>
				<fileset dir="../../../lib">
					<include name="**/*.jar"/>
				</fileset>
			</classpath>
		</java>
	</target>

	<!--
		Generates a PDF version of the report 
		by converting the .jrprint file.
	-->
	<target name="pdf">
		<java classname="ScriptletApp" fork="true">
			<arg value="-Tpdf"/>
			<arg value="-FScriptletReport.jrprint"/>
			<classpath>
				<pathelement location="./"/>
				<pathelement location="../../../classes"/>
				<fileset dir="../../../lib">
					<include name="**/*.jar"/>
				</fileset>
			</classpath>
		</java>
	</target>

	<!--
		Generates an XML version of the report 
		by converting the .jrprint file.
	-->
	<target name="xml">
		<java classname="ScriptletApp" fork="true">
			<arg value="-Txml"/>
			<arg value="-FScriptletReport.jrprint"/>
			<classpath>
				<pathelement location="./"/>
				<pathelement location="../../../classes"/>
				<fileset dir="../../../lib">
					<include name="**/*.jar"/>
				</fileset>
			</classpath>
		</java>
	</target>

	<!--
		Generates an XML version of the report 
		by converting the .jrprint file.
	-->
	<target name="xmlEmbed">
		<java classname="ScriptletApp" fork="true">
			<arg value="-TxmlEmbed"/>
			<arg value="-FScriptletReport.jrprint"/>
			<classpath>
				<pathelement location="./"/>
				<pathelement location="../../../classes"/>
				<fileset dir="../../../lib">
					<include name="**/*.jar"/>
				</fileset>
			</classpath>
		</java>
	</target>

	<!--
		Generates an HTML version of the report 
		by converting the .jrprint file.
	-->
	<target name="html">
		<java classname="ScriptletApp" fork="true">
			<arg value="-Thtml"/>
			<arg value="-FScriptletReport.jrprint"/>
			<classpath>
				<pathelement location="./"/>
				<pathelement location="../../../classes"/>
				<fileset dir="../../../lib">
					<include name="**/*.jar"/>
				</fileset>
			</classpath>
		</java>
	</target>

	<!--
		Generates an XLS version of the report 
		by converting the .jrprint file.
	-->
	<target name="xls">
		<java classname="ScriptletApp" fork="true">
			<arg value="-Txls"/>
			<arg value="-FScriptletReport.jrprint"/>
			<classpath>
				<pathelement location="./"/>
				<pathelement location="../../../classes"/>
				<fileset dir="../../../lib">
					<include name="**/*.jar"/>
				</fileset>
			</classpath>
		</java>
	</target>

	<!--
		Generates a CSV version of the report 
		by converting the .jrprint file.
	-->
	<target name="csv">
		<java classname="ScriptletApp" fork="true">
			<arg value="-Tcsv"/>
			<arg value="-FScriptletReport.jrprint"/>
			<classpath>
				<pathelement location="./"/>
				<pathelement location="../../../classes"/>
				<fileset dir="../../../lib">
					<include name="**/*.jar"/>
				</fileset>
			</classpath>
		</java>
	</target>

	<!--
		Generates a PDF file by filling the .jasper report design.
		No intermediate .jrprint file is produced.
	-->
	<target name="run">
		<java classname="ScriptletApp" fork="true">
			<arg value="-Trun"/>
			<arg value="-FScriptletReport.jasper"/>
			<classpath>
				<pathelement location="./"/>
				<pathelement location="../../../classes"/>
				<fileset dir="../../../lib">
					<include name="**/*.jar"/>
				</fileset>
			</classpath>
		</java>
	</target>

	<!--
		Launches the design viewer to preview the XML report design.
	-->
	<target name="viewDesignXML">
		<java classname="dori.jasper.view.JasperDesignViewer" fork="true">
			<arg value="-XML"/>
			<arg value="-FScriptletReport.xml"/>
			<classpath>
				<pathelement location="./"/>
				<pathelement location="../../../classes"/>
				<fileset dir="../../../lib">
					<include name="**/*.jar"/>
				</fileset>
			</classpath>
		</java>
	</target>

	<!--
		Launches the design viewer to preview the compiled report design.
	-->
	<target name="viewDesign">
		<java classname="dori.jasper.view.JasperDesignViewer" fork="true">
			<arg value="-FScriptletReport.jasper"/>
			<classpath>
				<pathelement location="./"/>
				<pathelement location="../../../classes"/>
				<fileset dir="../../../lib">
					<include name="**/*.jar"/>
				</fileset>
			</classpath>
		</java>
	</target>

	<!--
		Deletes all the generated files.
	-->
	<target name="clean">
		<delete>
			<fileset dir="." includes="**/*.class" />
			<fileset dir="." includes="**/*.jasper" />
			<fileset dir="." includes="**/*.jrprint" />
			<fileset dir="." includes="**/*.jrpxml" />
			<fileset dir="." includes="**/*.html" />
			<fileset dir="." includes="**/*.xls" />
			<fileset dir="." includes="**/*.csv" />
			<fileset dir="." includes="**/*.pdf" />
		</delete>
		<delete dir="ScriptletReport.jrpxml_files" />
		<delete dir="ScriptletReport.html_files" />
	</target>

</project>
