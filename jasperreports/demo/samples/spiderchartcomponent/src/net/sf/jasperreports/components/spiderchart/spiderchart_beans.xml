<?xml version="1.0" encoding="UTF-8"?>

<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
           http://www.springframework.org/schema/beans/spring-beans-2.0.xsd">

	<bean id="componentsBundle" class="net.sf.jasperreports.engine.component.DefaultComponentsBundle">
		<property name="xmlParser">
			<ref local="xmlParser"/>
		</property>
		<property name="componentManagers">
			<map>
				<entry key="spiderChart">
					<ref local="spiderChartManager"/>
				</entry>
			</map>
		</property>
	</bean>
	
	<bean id="xmlParser" class="net.sf.jasperreports.engine.component.DefaultComponentXmlParser">
		<property name="namespace">
			<value>http://jasperreports.sourceforge.net/jasperreports/spiderchart</value>
		</property>
		<property name="publicSchemaLocation">
			<value>http://jasperreports.sourceforge.net/dtds/spiderchart.xsd</value>
		</property>
		<property name="internalSchemaResource">
			<value>net/sf/jasperreports/components/spiderchart/spiderchart.xsd</value>
		</property>
		<property name="digesterConfigurer">
			<bean class="net.sf.jasperreports.components.spiderchart.SpiderChartDigester"/>
		</property>
	</bean>

	<bean id="spiderChartManager" class="net.sf.jasperreports.engine.component.DefaultComponentManager">
		<property name="componentCompiler">
			<bean class="net.sf.jasperreports.components.spiderchart.SpiderChartCompiler"/>
		</property>
		<property name="componentXmlWriter">
			<bean class="net.sf.jasperreports.components.spiderchart.SpiderChartXmlWriter"/>
		</property>
		<property name="componentFillFactory">
			<bean class="net.sf.jasperreports.components.spiderchart.SpiderChartFillFactory"/>
		</property>
		<property name="componentDesignConverter">
			<bean class="net.sf.jasperreports.components.spiderchart.SpiderChartDesignConverter"/>
		</property>
	</bean>

</beans>
