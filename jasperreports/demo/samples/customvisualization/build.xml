<project name="Custom Visualization Component Samples" basedir="." default="create-samples-tgz">
    <description>Create a package for the Custom Visualization Component Samples.</description>
    
    <!-- =========================================================
      Create the regular tar.gz distributions for iReport NB
    ============================================================= -->
    <target name="create-samples-tgz" description="Creates an tar.gz with the samples.">
        <tar tarfile="customvisualization-component_samples.tar">
            <tarfileset  dir="src/test/resources/reports" prefix="reports">
                <include name="*.jrxml"/>
            </tarfileset>
            <tarfileset  dir="src/test/resources/templates" prefix="templates">
                <include name="*.vm"/>
            </tarfileset>
            <tarfileset  dir="src/test/resources/scripts" prefix="scripts/scripts">
                <include name="*/**.js"/>
            </tarfileset>
        </tar>  

        <gzip zipfile="customvisualization-component_samples.tar.gz" src="customvisualization-component_samples.tar"/>
        <delete file="customvisualization-component_samples.tar"/>
    </target>
    
</project>
