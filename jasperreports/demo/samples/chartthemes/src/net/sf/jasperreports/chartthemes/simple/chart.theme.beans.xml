<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans 
       http://www.springframework.org/schema/beans/spring-beans-2.0.xsd">

	<bean id="themeBundle" class="net.sf.jasperreports.chartthemes.ChartThemeMapBundle">
		<property name="themes">
			<map>
				<entry key="simple">
					<ref bean="simpleChartTheme"/>
				</entry>
			</map>
		</property>
	</bean>

	<bean id="simpleChartTheme" class="net.sf.jasperreports.chartthemes.simple.XmlChartTheme">
		<property name="file" value="net/sf/jasperreports/chartthemes/simple/simple.jrctx"/>
	</bean>

</beans>
