<?xml version="1.0"?>
<!DOCTYPE mapping PUBLIC "-//EXOLAB/Castor Mapping DTD Version 1.0//EN" "http://castor.org/mapping.dtd">

<mapping>
	<class name="net.sf.jasperreports.charts.themes.SimpleChartThemeSettingsBean" auto-complete="true">
		<map-to xml="chart-theme"/>
	</class>

	<class name="net.sf.jasperreports.charts.themes.SimpleChartSettingsBean" auto-complete="true">
		<map-to xml="chart"/>
		<field name="backgroundPaint" type="net.sf.jasperreports.charts.themes.PaintProvider">
			<bind-xml auto-naming="deriveByClass" node="element"/>
		</field>
	</class>
	
	<class name="net.sf.jasperreports.charts.themes.ColorProvider">
		<map-to xml="color"/>
		<field name="color" type="java.awt.Color" handler="net.sf.jasperreports.charts.themes.ColorFieldHandler">
			<bind-xml node="attribute"/>
		</field>
	</class>
	
	<class name="net.sf.jasperreports.charts.themes.GradientPaintProvider">
		<map-to xml="gradient-paint"/>
		<field name="x1" type="integer">
			<bind-xml node="attribute"/>
		</field>
		<field name="y1" type="integer">
			<bind-xml node="attribute"/>
		</field>
		<field name="color1" type="java.awt.Color" handler="net.sf.jasperreports.charts.themes.ColorFieldHandler">
			<bind-xml node="attribute"/>
		</field>
		<field name="x2" type="integer">
			<bind-xml node="attribute"/>
		</field>
		<field name="y2" type="integer">
			<bind-xml node="attribute"/>
		</field>
		<field name="color2" type="java.awt.Color" handler="net.sf.jasperreports.charts.themes.ColorFieldHandler">
			<bind-xml node="attribute"/>
		</field>
	</class>
</mapping>
